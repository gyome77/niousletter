<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>{{ newsletter.name }}</title>
  </head>
  <body>
    <h1>{{ newsletter.name }}</h1>
    <p>Period: {{ period.start }} - {{ period.end }}</p>

    <h2>Highlights</h2>
    <ul>
      {% for item in items %}
        <li>
          <strong>{{ item.title }}</strong><br />
          {{ item.summary }}
        </li>
      {% endfor %}
    </ul>

    <h2>All Links</h2>
    <ul>
      {% for link in all_links %}
        <li><a href="{{ link }}">{{ link }}</a></li>
      {% endfor %}
    </ul>

    <p>
      <a href="{{ unsubscribe_url }}">Unsubscribe</a>
    </p>

    {% if open_tracking_pixel %}
      <img src="{{ open_tracking_pixel }}" width="1" height="1" alt="" />
    {% endif %}
  </body>
</html>
